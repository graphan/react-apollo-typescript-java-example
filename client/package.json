{
  "name": "typed-graphql-client-example",
  "private": true,
  "version": "0.1.0",
  "description": "Take advantage of GraphQL's type system in your frontend development process",
  "main": "dist",
  "repository": "https://github.com/rricard/typed-graphql-client-example",
  "author": "Robin Ricard <ricard.robin@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server --port 3000",
    "eslint": "eslint . --ext jsx,tsx,gql,graphql",
    "tslint": "tslint 'src/**/*.tsx?'",
    "update-schema": "npm run babel-node schema/updateSchema",
    "generate-graphql-types": "apollo-codegen generate src/graphql/*.graphql --schema schema/schema.json --target ts --output src/interfaces.ts",
    "prestart": "npm run update-schema && npm run generate-graphql-types",
    "babel-node": "babel-node --presets es2015,stage-0 --ignore node_modules,dist"
  },
  "devDependencies": {
    "@types/es6-promise": "^0.0.32",
    "@types/react": "^15.0.12",
    "@types/react-dom": "^0.14.23",
    "@types/recompose": "^0.20.4",
    "apollo-codegen": "^0.10.8",
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "~6.22.0",
    "css-loader": "^0.26.2",
    "eslint": "^3.17.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-graphql": "^0.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "graphql-document-collector": "^0.1.1",
    "graphql-tag": "^1.2.4",
    "json-loader": "^0.5.4",
    "style-loader": "^0.13.2",
    "sync-request": "^4.0.1",
    "ts-loader": "^2.0.1",
    "typescript": "2.2.0",
    "typescript-eslint-parser": "^2.0.0",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "apollo-client": "^0.9.0",
    "react": "^15.4.2",
    "react-apollo": "^0.12.0",
    "react-dom": "^15.4.2",
    "recompose": "^0.22.0"
  }
}
